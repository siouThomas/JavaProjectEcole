<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.politcus.game.TestFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Question 1 sur 36"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/holo_red_dark"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si les gens veulent conduire sans leur ceinture de sécurité, ce devrait être à eux d'en décider."
            android:id="@+id/textView2"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_weight="0.03"
            android:textAlignment="center" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_weight="0.39"
            android:max="4"
            android:progress="2"
            android:progressTint="@color/holo_red_dark"
            android:progressDrawable="@drawable/progressbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89dp">

            <Button
                android:text="Next"
                android:textColor="@color/holo_red_dark"
                android:textSize="17sp"
                android:background="@drawable/border_button"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="54dp" />
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
